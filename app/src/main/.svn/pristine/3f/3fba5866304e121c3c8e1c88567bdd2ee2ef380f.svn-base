                        // callAPI(evFuncURL, position);
                    }else if(jarr[i].contains("fn_dlist")){

                        //"fn_dlist('1935','36933','Milestones','36933/','_0','1935');
                        String[] arr = jarr[i].split("fn_dlist");
                        String[] fndlistFunc = arr[1].replaceAll("\'","").split(",");
