                        Log.e(DEBUG_TAG,"evaluateFunction = "+ jarr[i]);
                        Log.e(DEBUG_TAG, "evaluatefunction=FIELD ID = " + fieldId + "  FUNCTIONLIST= " + functionList + " EXTENSION= " + extension + "  JCODELIST= " + jcodeList);

                        evaluateFunction(fieldId,functionList, extension,jcodeList,value);
