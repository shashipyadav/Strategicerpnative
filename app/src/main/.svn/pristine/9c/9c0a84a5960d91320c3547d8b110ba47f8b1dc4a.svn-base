<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/item_bottom_margin"
    android:orientation="vertical">
    <include layout="@layout/title_textview"/>

    <RelativeLayout
        android:id="@+id/rel_layout"
        android:padding="8dp"
        android:background="@drawable/bottom_lne_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.myapplication.util.ClearableAutoCompleteTextView
            android:textColor="@color/black"
            android:textSize="@dimen/menu_text_size"
            android:layout_alignParentStart="true"
            android:layout_width="match_parent"
            android:background="@null"
            android:inputType="textNoSuggestions"
            android:id="@+id/autocomplete"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/auto_button" />


        <ImageButton
            android:layout_alignParentEnd="true"
            android:id="@+id/auto_button"
            android:layout_width="30dp"
            android:background="@drawable/ic_drop_down"
            android:layout_height="wrap_content"/>


    </RelativeLayout>
</LinearLayout>





